{
  "manifest_version": 3,
  "name": "Page Summarizer 2(Local RAG)",
  "version": "1.0",
  "description": "Summarize any page using local RAG + LLM",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
